<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">
    <TextView
        android:id="@+id/clockTime"
        android:text="06:10"
        android:textSize="35dp"
        android:textColor="#8a8a8a"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/clocktv"
        android:text="闹钟"
        android:textSize="13dp"
        android:textColor="#8a8a8a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clockTime"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/repeat"
        android:text="仅一次"
        android:textSize="13dp"
        android:textColor="#8a8a8a"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/clocktv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timedistance"
        android:text="22小时0分钟后响铃"
        android:textSize="13dp"
        android:textColor="#8a8a8a"
        app:layout_constraintLeft_toRightOf="@+id/repeat"
        app:layout_constraintTop_toTopOf="@+id/repeat"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.lifer.clock.DrawableSwitch
        xmlns:lh2="http://schemas.android.com/apk/res/com.example.lifer.clock"
        android:id="@+id/drawableSwitch"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/clocktv"
        android:layout_marginRight="8dp"
        android:layout_width="50dp"
        android:layout_height="23dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>