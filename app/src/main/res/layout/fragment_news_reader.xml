<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <!-- 导航栏 -->
                <HorizontalScrollView
                    android:id="@+id/channel_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/channel_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 导航栏的 channel 按钮 -->
                        <Button
                            android:id="@+id/channel_button_headlines"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="头条" />

                        <Button
                            android:id="@+id/channel_button_news"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="新闻" />

                        <Button
                            android:id="@+id/channel_button_domestic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="国内" />

                        <Button
                            android:id="@+id/channel_button_international"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="国际" />

                        <Button
                            android:id="@+id/channel_button_politics"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="政治" />

                        <Button
                            android:id="@+id/channel_button_finance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="财经" />

                        <Button
                            android:id="@+id/channel_button_sports"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="体育" />

                        <Button
                            android:id="@+id/channel_button_entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="娱乐" />

                        <Button
                            android:id="@+id/channel_button_military"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="军事" />

                        <Button
                            android:id="@+id/channel_button_education"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="教育" />

                        <Button
                            android:id="@+id/channel_button_technology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="科技" />

                        <Button
                            android:id="@+id/channel_button_nba"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="NBA" />

                        <Button
                            android:id="@+id/channel_button_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="股票" />

                        <Button
                            android:id="@+id/channel_button_constellation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="星座" />

                        <Button
                            android:id="@+id/channel_button_women"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="女性" />

                        <Button
                            android:id="@+id/channel_button_parenting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="育儿" />

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/news_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- 新闻条目将在此动态添加 -->

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
